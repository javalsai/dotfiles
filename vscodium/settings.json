{
    //------------------//
    //- Global VS-Code -//
    //------------------//

    "window.menuBarVisibility": "toggle",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.colorCustomizations": {
        "activityBar.foreground": "#fffd",
        "activityBar.background": "#101517",


        "activityBar.activeBorder": "#d557",
        "activityBar.activeBackground": "#151a1c",


        "statusBar.background": "#101517",
        "statusBar.debuggingBackground": "#d55",


        "minimap.background": "#151a1c",


        "scrollbar.shadow": "#000a",


        "sideBarSectionHeader.background": "#101517",
        "sideBar.background": "#151a1c",


        "tab.activeBackground": "#000",
        "tab.inactiveBackground": "#121719",
        "tab.unfocusedActiveBackground": "#1a1c1d",
        "tab.hoverBackground": "#aaa1",


        "editor.background": "#161b1d",
        "editorCursor.foreground": "#d0656d",
        "editorGroupHeader.tabsBackground": "#121719",


        "breadcrumb.background": "#000",
        "breadcrumbPicker.background": "#000",


        "panel.background": "#161b1d",


        "debugConsole.infoForeground": "#d55",


        "terminal.ansiBlack"         :   "#2d3234",
        "terminal.ansiRed"           :   "#cc6666",
        "terminal.ansiGreen"         :   "#b5bd68",
        "terminal.ansiYellow"        :   "#f0c674",
        "terminal.ansiBlue"          :   "#81a2be",
        "terminal.ansiMagenta"       :   "#b294bb",
        "terminal.ansiCyan"          :   "#8abeb7",
        "terminal.ansiWhite"         :   "#c5c8c6",

        "terminal.ansiBrightBlack"   :   "#666666",
        "terminal.ansiBrightRed"     :   "#d54e53",
        "terminal.ansiBrightGreen"   :   "#b9ca4a",
        "terminal.ansiBrightYellow"  :   "#e7c547",
        "terminal.ansiBrightBlue"    :   "#7aa6da",
        "terminal.ansiBrightMagenta" :   "#c397d8",
        "terminal.ansiBrightCyan"    :   "#70c0b1",
        "terminal.ansiBrightWhite"   :   "#eaeaea",
    },

    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontSize": 14,
    "editor.fontFamily": "'Source Code Pro', 'Hack Nerd Font', 'Iosevka'",
    "editor.foldingImportsByDefault": true,
    "editor.formatOnPaste": true,
    "editor.linkedEditing": true,
    "editor.renderFinalNewline": "off",
    "editor.renderWhitespace": "trailing",
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.enabled": true,

    "editor.suggest.showWords": false,
    "editor.suggest.insertMode": "insert",
    "typescript.preferences.importModuleSpecifier": "non-relative",

    "git.confirmSync": false,
    "git.enableCommitSigning": true,
    "git.openRepositoryInParentFolders": "never",

    "terminal.external.linuxExec": "alacritty",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.env.linux": {
        "EDITOR": "codium --wait"
    } ,

    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.ejs": "html",
        "*.env": "ini",
    },
    "files.exclude": {
        "**/node_modules/": true
    },

    "javascript.updateImportsOnFileMove.enabled": "always",
    "html.format.templating": true,
    "emmet.includeLanguages": {
        "ejs": "html",
    },

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "security.workspace.trust.untrustedFiles": "open",

    "debug.onTaskErrors": "abort",

    //----------------//
    //-  Extensions  -//
    //----------------//
    "indentOneSpace.workOnSingleLine": false,
    "indentOneSpace.cramReversed": true,
    "indentOneSpace.onlyCompleteRange": true,

    "vscode-pets.theme": "forest",
    "vscode-pets.position": "explorer",

    "color-highlight.matchWords": true,
    "color-highlight.matchRgbWithNoFunction": true,

    "haskell.manageHLS": "PATH",

    "livePreview.notifyOnOpenLooseFile": false,

    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.advanced.messages": {
        "suppressCreatePullRequestPrompt": true
    },

    "overtype.paste": true,
    "overtype.perEditor": true,
    "overtype.secondaryCursorStyle": "underline",
    "overtype.labelInsertMode": "",
    "overtype.labelOvertypeMode": "",

    "vsicons.dontShowNewVersionMessage": true,

    "discord.detailsEditing": "âœŽ `{full_dir_name}/{file_name}` on {git_branch}",
    "discord.lowerDetailsEditing": "Line {current_line} of {total_lines}",


    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#94979d",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },

        {
            "tag": "~",
            "color": "#373737",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    "playwright.reuseBrowser": false,
    "git.autofetch": true,

    "print.filepathHeadingForIndividuallyPrintedDocuments": false,
    "print.colourScheme": "Stack Overflow",

    "todo-tree.highlights.enabled": false,
    "redhat.telemetry.enabled": true,
}
