# just skim this https://github.com/CppCXY/EmmyLuaCodeStyle/blob/master/lua.template.editorconfig

[*.lua]
indent_style = space
indent_size = 2
quote_style = single
table_separator_style = comma
break_all_list_when_line_exceed = true
max_line_length = 120
auto_collapse_lines = false
trailing_table_separator = smart
space_after_comment_dash = true
auto_collapse_lines = true
end_statement_with_semicolon = never
